# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/todo-list-app

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# Logging
LOG_LEVEL=info

# Client URL (for CORS)
